<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mbarc.palinroam.activities.EditProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    <ScrollView
        android:id="@+id/profile_form"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
           <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/icons"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@mipmap/profileimage"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <com.mbarc.palinroam.views.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:padding="5dp"
                                android:textColor="@color/primary_text"
                                android:text="@string/name_text"/>
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@mipmap/videoplay"
                                    />
                            </LinearLayout>
                            <com.mbarc.palinroam.views.RobotoTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:padding="5dp"
                                android:textColor="@color/high_light_text_color"
                                android:text="@string/view_your_profile_text"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/icons"
                android:layout_marginTop="20dp"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.mbarc.palinroam.views.RobotoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/personal_information_text"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/activity_headertext_size"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list_background"/>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/edit_mailid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/prompt_email"
                                android:drawableLeft="@mipmap/aboutmail"
                                android:drawablePadding="10dp"
                                android:background="@null"
                                android:padding="5dp"
                                android:textColorHint="@color/secondary_text"
                                android:textColor="@color/primary_text"
                                android:maxLines="1"
                                android:textSize="14sp"
                                android:singleLine="true" />
                        </android.support.design.widget.TextInputLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list_background"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edit_mobileno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/phone_text"
                            android:drawableLeft="@mipmap/aboutphoneicon"
                            android:drawablePadding="10dp"
                            android:background="@null"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textColorHint="@color/secondary_text"
                            android:textColor="@color/primary_text"
                            android:maxLines="1"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list_background"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edit_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/genter_text"
                            android:drawableLeft="@mipmap/aboutgendericon"
                            android:drawablePadding="10dp"
                            android:background="@null"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textColorHint="@color/secondary_text"
                            android:textColor="@color/primary_text"
                            android:maxLines="1"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list_background"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edit_dateofbirth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/birthdate_text"
                            android:drawableLeft="@mipmap/aboutbirthdayicon"
                            android:drawablePadding="10dp"
                            android:background="@null"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textColorHint="@color/secondary_text"
                            android:textColor="@color/primary_text"
                            android:maxLines="1"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/icons"
                android:layout_marginTop="20dp"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.mbarc.palinroam.views.RobotoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/address_text"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/activity_headertext_size"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list_background"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edit_street_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/street_text"
                            android:background="@null"
                            android:padding="5dp"
                            android:textColorHint="@color/secondary_text"
                            android:textColor="@color/primary_text"
                            android:maxLines="1"
                            android:textSize="14sp"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list_background"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edit_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/city_text"
                            android:background="@null"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textColorHint="@color/secondary_text"
                            android:textColor="@color/primary_text"
                            android:maxLines="1"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list_background"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edit_zip_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/zip_code_text"
                            android:background="@null"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textColorHint="@color/secondary_text"
                            android:textColor="@color/primary_text"
                            android:maxLines="1"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list_background"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edit_country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/country_text"
                            android:background="@null"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textColorHint="@color/secondary_text"
                            android:textColor="@color/primary_text"
                            android:maxLines="1"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/icons"
                android:layout_marginTop="20dp"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.mbarc.palinroam.views.RobotoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/id_proof_text"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/activity_headertext_size"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list_background"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/nosmokeicon"
                            android:visibility="gone"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/music"
                            android:visibility="gone"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/nopeticon"
                            android:visibility="gone"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/music"
                            android:visibility="gone"/>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list_background"
                        android:visibility="gone"/>
                    <com.mbarc.palinroam.views.RobotoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="end"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/add_id_proof"
                        android:textColor="@color/primary_text"
                        android:visibility="visible"
                        android:textSize="@dimen/activity_headertext_size"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/icons"
                android:layout_marginTop="20dp"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.mbarc.palinroam.views.RobotoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/car_details_text"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/activity_headertext_size"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list_background"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@mipmap/profileimage"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.mbarc.palinroam.views.RobotoTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:padding="5dp"
                                android:textColor="@color/primary_text"
                                android:text="@string/demo_car_model"/>
                            <com.mbarc.palinroam.views.RobotoTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:padding="5dp"
                                android:textColor="@color/secondary_text"
                                android:text="@string/demo_about_car"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list_background"
                        android:visibility="visible"/>
                    <com.mbarc.palinroam.views.RobotoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="end"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/add_car_text"
                        android:textColor="@color/primary_text"
                        android:visibility="visible"
                        android:textSize="@dimen/activity_headertext_size"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/icons"
                android:layout_marginTop="20dp"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.mbarc.palinroam.views.RobotoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/preferences"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/activity_headertext_size"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list_background"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/nosmokeicon"
                            android:visibility="gone"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/music"
                            android:visibility="gone"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/nopeticon"
                            android:visibility="gone"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/music"
                            android:visibility="gone"/>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list_background"
                        android:visibility="gone"/>
                    <com.mbarc.palinroam.views.RobotoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="end"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/add_preference_text"
                        android:textColor="@color/primary_text"
                        android:visibility="visible"
                        android:textSize="@dimen/activity_headertext_size"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
