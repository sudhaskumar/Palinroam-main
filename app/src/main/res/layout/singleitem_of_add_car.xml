<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8sp"
    app:cardBackgroundColor="@color/icons"
    app:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:id="@+id/provider_profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="105dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/car_image"
                    android:src="@mipmap/profileimage" />


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <com.mbarc.palinroam.views.RobotoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:maxLength="16"
                            android:id="@+id/car_name"
                            android:maxLines="1"
                            android:textColor="@color/primary_text"
                            android:text="@string/carname_text"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <com.mbarc.palinroam.views.RobotoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/carcolor_text"
                            android:id="@+id/car_color"
                            android:textColor="@color/secondary_text"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>


                    <com.mbarc.palinroam.views.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:maxLines="1"
                        android:id="@+id/car_desc"
                        android:text="@string/cardesc_text"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|top"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/edit_layout">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitCenter"
                        android:id="@+id/edit_image"
                        android:src="@mipmap/updateinfoicon"/>
                    <com.mbarc.palinroam.views.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:id="@+id/edit_text"
                        android:text="@string/edit_text"
                        android:textColor="@color/secondary_text"
                        android:textSize="16sp" />

                </LinearLayout>
                
            </LinearLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>