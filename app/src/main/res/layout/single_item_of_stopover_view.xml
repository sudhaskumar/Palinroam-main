<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/icons">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp">
        <com.mbarc.palinroam.views.RobotoTextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:maxLines="2"
            android:id="@+id/source_point_text_view"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:text="@string/demo_city1"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textAlignment="gravity"/>
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.mbarc.palinroam.views.RobotoTextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:gravity="center"
                android:id="@+id/kms_text_view"
                android:layout_marginRight="10dp"
                android:text="@string/demo_kms"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textAlignment="gravity"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:gravity="center"/>
            <com.mbarc.palinroam.views.RobotoTextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:id="@+id/rate_per_person_text_view"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:text="@string/sample_amt"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textAlignment="gravity"/>
        </LinearLayout>
        <com.mbarc.palinroam.views.RobotoTextView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:maxLines="2"
            android:id="@+id/destination_point_text"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="@string/demo_city2"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textAlignment="gravity"/>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_gravity="bottom"
    android:background="@color/list_background"/>


</LinearLayout>