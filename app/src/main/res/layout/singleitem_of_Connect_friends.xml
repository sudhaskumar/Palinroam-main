<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginRight="16dp"
    android:orientation="vertical"
    android:padding="10dp"
    app:cardElevation="@dimen/card_elevation"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="vertical"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/connect_friend_pro_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/profileimage" />

                <com.mbarc.palinroam.views.RobotoTextView
                    android:id="@+id/connect_friend_pro_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:background="@drawable/rating_circler_background"
                    android:maxLength="3"
                    android:padding="10dp"
                    android:text="4.3"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.mbarc.palinroam.views.RobotoTextView
                    android:id="@+id/connect_friend_pro_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:singleLine="true"
                    android:text="@string/name_text"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.mbarc.palinroam.views.RobotoTextView
                    android:id="@+id/connect_friend_pro_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/age_text"
                    android:textColor="@color/secondary_text"
                    android:textSize="11sp" />

            </LinearLayout>

            <com.mbarc.palinroam.views.RobotoTextView
                android:id="@+id/connect_friend_pro_mutuals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/mutual_text"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/connect_friend_to_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@mipmap/addfriendsicon" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>