<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@color/icons"
    app:cardPreventCornerOverlap="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="105dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/profileimage"/>
                    <com.mbarc.palinroam.views.RobotoTextView
                        android:id="@+id/sirl_user_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:background="@drawable/rating_circler_background"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:maxLength="3"
                        android:text="4.3"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.mbarc.palinroam.views.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/name_text"
                                android:id="@+id/sirl_name"
                                android:layout_gravity="bottom"
                                android:textSize="16sp"
                                android:maxLength="12"
                                android:layout_marginRight="5dp"
                                android:textStyle="normal"
                                android:textColor="@color/primary_text"/>
                            <com.mbarc.palinroam.views.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/age_text"
                                android:id="@+id/sirl_age"
                                android:layout_gravity="bottom"
                                android:textSize="13sp"
                                android:textStyle="normal"
                                android:textColor="@color/icon_text_color"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end|bottom">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginTop="2dp"
                                    android:src="@mipmap/rupeessign"
                                    />
                                <com.mbarc.palinroam.views.RobotoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="3dp"
                                    android:text="@string/sample_amt"
                                    android:id="@+id/sirl_amt"
                                    android:textStyle="normal"
                                    android:textColor="@color/tab_indicator_color"
                                    android:textSize="18sp"/>
                                <com.mbarc.palinroam.views.RobotoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/name_seat_text"
                                    android:textStyle="normal"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="20dp"
                                android:scaleType="centerCrop"
                                android:layout_marginTop="3dp"
                                android:src="@mipmap/verifiedmembericon"/>
                            <com.mbarc.palinroam.views.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/verified_member_text"
                                android:layout_marginRight="5dp"
                                android:textSize="12sp"
                                android:textStyle="normal"
                                android:textColor="@color/primary_text"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="18dp"
                                    android:id="@+id/sirl_certainty_color"
                                    android:background="@drawable/certain_circler_background" />
                                <com.mbarc.palinroam.views.RobotoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/certainty_text"
                                    android:id="@+id/sirl_certainty_type"
                                    android:layout_marginLeft="3dp"
                                    android:textSize="12sp"
                                    android:textStyle="normal"
                                    android:textColor="@color/icon_text_color"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="20dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/femaleonly"/>
                            <com.mbarc.palinroam.views.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="@string/female_only_text"
                                android:layout_marginLeft="5dp"
                                android:textSize="13sp"
                                android:textStyle="normal"
                                android:textColor="@color/icon_text_color"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:layout_gravity="bottom">
                            <com.mbarc.palinroam.views.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:id="@+id/sirl_date"
                                android:text="@string/demo_date_text"
                                android:textStyle="normal"
                                android:textColor="@color/icon_text_color"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_gravity="bottom"
                    android:src="@mipmap/friends"/>
                <com.mbarc.palinroam.views.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/icon_text_color"
                    android:textSize="12sp"
                    android:layout_gravity="bottom"
                    android:id="@+id/sirl_no_friends"
                    android:layout_marginLeft="5dp"
                    android:textStyle="normal"
                    android:text="@string/friends_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/mutualfriend"/>
                <com.mbarc.palinroam.views.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/mutual_text"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:id="@+id/sirl_no_mutual_friends"
                    android:textStyle="normal"
                    android:textColor="@color/icon_text_color"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:gravity="end">

                <com.mbarc.palinroam.views.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/sirl_time"
                    android:text="@string/demo_time_text"
                    android:textStyle="normal"
                    android:textColor="@color/icon_text_color"/>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="bottom"
            android:background="@color/list_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
           >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/nosmokeicon"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/nopeticon"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/music"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/nosmokeicon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/seatsicon"/>
                <com.mbarc.palinroam.views.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_seat_text"
                    android:layout_marginTop="5dp"
                    android:id="@+id/sirl_no_of_seats"
                    android:textStyle="normal"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>